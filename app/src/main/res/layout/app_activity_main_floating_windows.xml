<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="123dp"
    android:layout_height="37.5dp"
    android:gravity="center_vertical"
    android:background="@drawable/app_solid_80000000_corners_19dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_user_header"
        android:layout_width="30.5dp"
        android:layout_height="30.5dp"
        android:layout_marginStart="4dp"
        android:src="@mipmap/app_tx_moren"
        android:layout_marginLeft="4dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:text="兮兮的迷..."
            android:textColor="#ffffffff"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:text="ID 16565"
            android:textColor="#ffcccccc"
            android:textSize="9sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="16dp"
        android:layout_height="17.5dp"
        android:layout_marginStart="10.5dp"
        android:src="@mipmap/app_home_exit_room"
        android:layout_marginLeft="10.5dp" />
</LinearLayout>