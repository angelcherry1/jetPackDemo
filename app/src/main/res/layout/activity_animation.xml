<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animationView.AnimationActivity">

    <com.example.jetpackdemo.animationView.SpreadView
        android:id="@+id/spreadView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:spread_center_color="#FFFFFF"
        app:spread_delay_milliseconds="3"
        app:spread_distance="4"
        app:spread_max_radius="90"
        app:spread_radius="150"
        app:spread_spread_color="#FF71B2" />

    <com.example.jetpackdemo.animationView.AnnouncementView
        android:id="@+id/avm"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="停止" />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="@drawable/searchbar_anim"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />
    <com.example.jetpackdemo.animationView.CustomScoreBar
        android:id="@+id/csb"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:leftBackground="@mipmap/app_room_pk_left"
        app:rightBackground="@mipmap/app_room_pk_right"
        app:centerIcon="@mipmap/guang1" />

    <EditText
        android:id="@+id/left_et"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:imeOptions="actionSend"
        android:hint="左边比分"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_below="@+id/csb" />

    <EditText
        android:id="@+id/right_et"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:hint="右边比分"
        android:imeOptions="actionSend"
        android:layout_below="@+id/csb"
        android:layout_toRightOf="@+id/left_et"
        android:layout_marginLeft="@dimen/dp_10" />

    <ImageView
        android:id="@+id/iv_red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="#ff0000" />

    <ImageView
        android:id="@+id/iv_red2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:background="#ff0000" />

    <com.example.jetpackdemo.animationView.FlexBoxLayout2
        android:id="@+id/ll_add_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_i_love_you"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"
        android:textColor="@color/love" />

    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/i_is_your_father"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/i_is_your_father"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/i_is_your_father"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/i_is_your_father"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/i_is_your_father"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/i_is_your_father"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/i_is_your_father"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/i_is_your_father"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/tanli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="弹力" />

    <com.example.jetpackdemo.animationView.RoomSingNextView
        android:layout_width="144dp"
        android:layout_height="39dp"
       android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        />
</RelativeLayout>