<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ClearSreenActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是你爹啊"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="点我啊"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/my_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.jetpackdemo.view.MyView
            android:id="@+id/my_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <com.example.jetpackdemo.view.FloatingWindows
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.jetpackdemo.view.SinWaveView
        android:id="@+id/sin_wave"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true" />

    <com.example.jetpackdemo.view.MarqueeTextView
        android:id="@+id/mtv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="我时你的哈丹诺夫卡是否能i开发框架送啊卡夫卡"
        android:singleLine="true"
        android:layout_marginTop="60dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true" />
</RelativeLayout>